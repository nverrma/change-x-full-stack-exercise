<h1>Payments</h1>

<table id="payments">
  <thead>
    <tr>
      <th>Date</th>
      <th>Project</th>
      <th>Payments due</th>
    </tr>
  </thead>

  <tbody>
    <% @dates.sort_by { |date, _project| date }.to_h.keys.each do |date| %>
      <% @dates[date].each do |project_title| %>
        <tr>
          <td><%= date %></td>
          <td><%= project_title %></td>
          <td><%= project_applicants(@projects, project_title) %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
