<p style="color: green"><%= notice %></p>

<%= render @applicant %>

<div>
  <% if @applicant.comments.exists? %>
  <%= link_to "View all comments", comments_path(applicant_id: @applicant), data: { turbo: false } %> |
  <% end %>

  <!-- Turbo not allowing stimulus controller to initiate in edit page load, hence disable that for edit link-->
  <%= link_to "Edit this applicant", edit_applicant_path(@applicant), data: { turbo: false } %> |
  <%= link_to "Back to applicants", applicants_path %>

  <%= button_to "Destroy this applicant", @applicant, method: :delete %>
</div>
